{
	"name": "Pulse Development",
	"build": {
		"dockerfile": "Dockerfile",
		"context": "."
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"golang.go",
				"dbaeumer.vscode-eslint",
				"esbenp.prettier-vscode"
			],
			"settings": {
				"go.gopath": "/go",
				"go.toolsManagement.autoUpdate": true
			}
		}
	},
	"forwardPorts": [8080, 3000],
	"postCreateCommand": "go version && node --version",
	"remoteUser": "vscode"
}
