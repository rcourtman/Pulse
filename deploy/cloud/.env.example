# Domain
DOMAIN=cloud.pulserelay.pro
ACME_EMAIL=admin@pulserelay.pro

# Cloudflare (for DNS-01 wildcard TLS)
CF_DNS_API_TOKEN=

# Image pins (required; use immutable digest refs)
TRAEFIK_IMAGE=traefik@sha256:<pin>
CONTROL_PLANE_IMAGE=ghcr.io/rcourtman/pulse-control-plane@sha256:<pin>

# Control Plane
CP_ENV=production
CP_ADMIN_KEY=
CP_PULSE_IMAGE=ghcr.io/rcourtman/pulse@sha256:<pin>
CP_TENANT_MEMORY_LIMIT=536870912
CP_PUBLIC_STATUS=false
CP_PUBLIC_METRICS=false
CP_ALLOW_DOCKERLESS_PROVISIONING=false
CP_REQUIRE_EMAIL_PROVIDER=true
# Control-plane route limits (requests/minute per source IP)
CP_RL_WEBHOOK_PER_MINUTE=120
CP_RL_MAGIC_VERIFY_PER_MINUTE=30
CP_RL_SESSION_PER_MINUTE=60
CP_RL_ADMIN_PER_MINUTE=120
CP_RL_ACCOUNT_PER_MINUTE=300
CP_RL_PORTAL_PER_MINUTE=300
RESEND_API_KEY=
PULSE_EMAIL_FROM=noreply@pulserelay.pro

# Stripe (production/live mode for this template)
STRIPE_WEBHOOK_SECRET=
STRIPE_API_KEY=
CP_TRIAL_SIGNUP_PRICE_ID=
